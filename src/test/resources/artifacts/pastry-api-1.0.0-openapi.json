{
   "openapi": "3.0.0",
   "info": {
      "title": "Pastry API",
      "version": "1.0.0",
      "description": "API for managing delicious pastries"
   },
   "paths": {
      "/pastries": {
         "get": {
            "operationId": "listPastries",
            "summary": "Get list of pastries",
            "parameters": [
               {
                  "name": "size",
                  "in": "query",
                  "schema": {
                     "type": "string",
                     "enum": ["S", "M", "L"]
                  }
               }
            ],
            "responses": {
               "200": {
                  "description": "List of pastries",
                  "content": {
                     "application/json": {
                        "schema": {
                           "type": "array",
                           "items": {
                              "type": "object",
                              "properties": {
                                 "name": { "type": "string" },
                                 "description": { "type": "string" },
                                 "size": { "type": "string" },
                                 "price": { "type": "number" }
                              }
                           }
                        }
                     }
                  }
               }
            }
         }
      }
   }
}
